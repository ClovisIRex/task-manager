datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  owner       String
  dueDate     DateTime
  status      String
  priority    String
  tasks       Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  owner       String
  status      String
  priority    String
  ticketId    Int
  ticket      Ticket   @relation(fields: [ticketId], references: [id])
}

